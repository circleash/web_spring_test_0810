<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.circleash.spring.lesson06.dao.FavoriteDAO">
 
 	<insert id="insertFavorite">
 		INSERT INTO
 			`webpage`
 		(
 			`name`
 			,`url`
 			,`createdAt`
 			,`updatedAt`
 		) VALUES (
 			#{name}
 			,#{url}
 			,now()
 			,now()
 			
 			)
 	
 	
 	
 	</insert>
 	
 	<select id="selectFavoriteList" resultType="com.circleash.spring.lesson06.model.Favorite">
		SELECT
			`id`
			, `name`
			, `url`
			, `createdAt`
			, `updatedAt`
		FROM
			`webpage`
	
	</select>
	
	<select id="selectCountByUrl" parameterType="string" resultType="int">
		SELECT
			count(*)
		FROM
			`webpage`
		WHERE
			`url` = #{url};
	</select>
	
	<delete id="deleteFavorite" parameterType="int">
		DELETE FROM `webpage`
		WHERE `id`= #{id}
	
	
	</delete>
 </mapper>