<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.circleash.spring.lesson03.dao.RealestateDAO">
 	<select id="selectRealestate" resultType="com.circleash.spring.lesson03.model.Realestate"
 	parameterType="int">
 		SELECT
 			`id`
 			, `realtorId`
 			, `address`
 			, `area`
 			, `type`
 			, `price`
 			, `rentPrice`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`real_estate`
 		WHERE
 			`id` = #{id}
 	</select>
 	
 	<select id="selectRealEstateByRentPrice" resultType="com.circleash.spring.lesson03.model.Realestate"
 	parameterType="int">
	 	SELECT
	 			`id`
	 			, `realtorId`
	 			, `address`
	 			, `area`
	 			, `type`
	 			, `price`
	 			, `rentPrice`
	 			, `createdAt`
	 			, `updatedAt`
	 		FROM
	 			`real_estate`
	 		WHERE
	 			<![CDATA[`rentPrice` < #{rent}]]>
	 			
 	</select>
 	
 	<select id="selectRealEstateByAreaPrice" resultType="com.circleash.spring.lesson03.model.Realestate"
 	parameterType="int">
 		SELECT
	 			`id`
	 			, `realtorId`
	 			, `address`
	 			, `area`
	 			, `type`
	 			, `price`
	 			, `rentPrice`
	 			, `createdAt`
	 			, `updatedAt`
	 		FROM
	 			`real_estate`
	 		WHERE
	 			<![CDATA[
	 			`area` >= #{area}
	 			AND `price` <= #{price}
	 			]]>
	 		ORDER BY `id` DESC;
 	</select>
 	<insert id="insertRealestateAsObject" 
 	parameterType="com.circleash.spring.lesson03.model.Realestate">
	 	INSERT INTO
	 			`real_estate`
	 		(
	 			`realtorId`
	 			, `address`
	 			, `area`
	 			, `type`
	 			, `price`
	 			, `rentPrice`
	 			, `createdAt`
	 			, `updatedAt`
	 			) VALUES (
	 			#{realtorId}
	 			, #{address}
	 			, #{area}
	 			, #{type}
	 			, #{price}
	 			, #{rentPrice}
	 			, now()
	 			, now()
	 		)
 	</insert>
 
 
 	
 	<insert id="insertRealestate" parameterType="map">
 		INSERT INTO
 			`real_estate`
 		(
 			`realtorId`
 			, `address`
 			, `area`
 			, `type`
 			, `price`
 			, `rentPrice`
 			, `createdAt`
 			, `updatedAt`
 			) VALUES (
 			`realtorId` = #{realtorId}
 			, #{address}
 			, #{area}
 			, #{type}
 			, #{price}
 			, #{rentPrice}
 			, now()
 			, now()
 		)
 	</insert>
 	
 	<update id="updatedRealEstateById" parameterType="map">
 		UPDATE
 			`real_estate`
 		SET
 			`type` = #{type}
 			, `price` = #{price}
 		WHERE
 			`id` = #{id}
 	</update>
 
 	<delete id="deleteRealEstateById" parameterType="int">
 		DELETE FROM
 			`real_estate`
 		WHERE
 			`id` = #{id} 	
 	</delete>
 
 
 </mapper>